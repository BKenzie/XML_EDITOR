<ActionPaths>

	<Tabs_XEDITOR>
		<Show_Tabs> ActionPath, ValveState, PumpState, RockerState, MagnetState </Show_Tabs>
	</Tabs_XEDITOR>

	<ActionPath attrib1="Any attributes are in this section" attrib2="Here is another test attribute"
